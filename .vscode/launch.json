{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (terminal)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/moonshot/bin/Debug/netcoreapp3.1/moonshot.dll",
            "args": ["-debug", "-fps"],
            "cwd": "${workspaceFolder}/moonshot/bin/Debug/netcoreapp3.1/",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        },
        {
            "name": ".NET Core Launch (external terminal)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/moonshot/bin/Debug/netcoreapp3.1/moonshot.dll",
            "args": ["-debug", "-fps"],
            "cwd": "${workspaceFolder}/moonshot/bin/Debug/netcoreapp3.1/",
            "stopAtEntry": false,
            "console": "externalTerminal"
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}